<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mostafawattad.sportbuddy">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">

        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateVisible|adjustNothing"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".myEventsActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName="com.example.mostafawattad.sportbuddy.MainActivity"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateEventSc"
            android:label="@string/title_activity_create_event_sc"
            android:parentActivityName="com.example.mostafawattad.sportbuddy.MainActivity" >
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".EventInfo"
            android:label="@string/title_activity_event_info"
            android:theme="@style/AppTheme"></activity>


    </application>

</manifest>
